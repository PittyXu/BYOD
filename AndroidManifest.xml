<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.byod"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.byod.BYODApplication"
        android:allowBackup="false"
        android:launchMode="singleTask"
        android:clearTaskOnLaunch="true"
        android:stateNotNeeded="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 认证界面：每次通过图表进入应用都需要认证 -->
        <activity 
            android:name="com.byod.AuthenticateActivity"
            
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:taskAffinity="com.byod.auth"
            android:excludeFromRecents="true"
            android:screenOrientation="nosensor"
            >
          <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!-- launcher,小米手机里需要对系统默认应用进行设置 -->
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <!--launcher界面 -->
        <activity
            android:name="com.byod.launcher.HomeScreen"
            android:taskAffinity="com.byod.launcher"
            >
        </activity>
        <!--欢迎界面 -->
        <activity 
            android:name="com.byod.MainActivity"
            >
        </activity>
        <!--注册页面 -->
        <activity 
            android:name="com.byod.application.UserRegisterPage1"
            >
        </activity>
        <!--注册页面 -->
        <activity 
            android:name="com.byod.application.UserRegisterPage2"
            >
        </activity>

        <!-- service monitor the top task activity -->
        <service 
            android:name="com.byod.application.watcher.AppWatcherService" >
            <intent-filter >
                <action android:name="com.byod.action.START" />
            </intent-filter>
        </service>
        
        <!-- device admin -->
        <receiver 
            android:name="com.byod.app.listener.MDMReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:description="@string/admin_desc"
            >
            <meta-data 
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin"
                />
            <intent-filter android:priority="2147483647">
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED"/>
            </intent-filter>
        </receiver>

        <receiver android:name="com.byod.app.listener.PackageChangeReceiver" >
            <intent-filter android:priority="2147483647">
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        </application>

</manifest>
