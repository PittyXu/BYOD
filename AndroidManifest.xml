<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.byod"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.byod.BYODApplication"
        android:allowBackup="false"
        android:launchMode="singleTask"
        android:clearTaskOnLaunch="true"
        android:stateNotNeeded="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- homescreen -->
        <activity 
            android:name="com.byod.launcher.HomeScreen"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:screenOrientation="nosensor"
            >
          <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!-- launcher,小米手机里需要对系统默认应用进行设置 -->
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <!--欢迎页面 -->
        <activity
            android:name="com.byod.MainActivity"
            android:label="@string/app_name" >
           
        </activity>
        <!--进入BYOD应用前的认证页面 -->
        <activity 
            android:name="com.byod.AuthenticateActivity"
            >
        </activity>
        <!--注册页面 -->
        <activity 
            android:name="com.byod.application.UserRegisterWebview"
            >
        </activity>

        <!-- service monitor the top task activity -->
        <service 
            android:name="com.byod.application.watcher.AppWatcherService" >
            <intent-filter >
                <action android:name="com.byod.action.START" />
            </intent-filter>
        </service>
    </application>


</manifest>
